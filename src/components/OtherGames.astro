---
// src/components/OtherGames.astro
const { dict } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 text-center">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">
      ðŸŽ® {dict.otherGames.title}
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10">
      <!-- Card -->
      <div class="rounded-xl shadow-lg overflow-hidden bg-white transform hover:-translate-y-2 hover:shadow-2xl transition duration-300">
        <div class="h-48 overflow-hidden">
          <img 
            src="/unoplay.jpg" 
            alt="UNO Online" 
            class="w-full h-full object-cover hover:scale-110 transition duration-500"
          />
        </div>
        <div class="p-5 text-center">
          <h3 class="font-bold text-lg">{dict.otherGames.unoTitle}</h3>
          <p class="text-gray-600 text-sm mb-5">{dict.otherGames.unoDesc}</p>
          <a href="https://retrosgame.com/uno/" class="inline-block px-6 py-2 bg-teal-600 text-white rounded-full font-semibold hover:bg-teal-700 transition">
            Play
          </a>
        </div>
      </div>

      <!-- Card -->
      <div class="rounded-xl shadow-lg overflow-hidden bg-white transform hover:-translate-y-2 hover:shadow-2xl transition duration-300">
        <div class="h-48 overflow-hidden">
          <img 
            src="/FruitBucket.jpg" 
            alt="Chess" 
            class="w-full h-full object-cover hover:scale-110 transition duration-500"
          />
        </div>
        <div class="p-5 text-center">
          <h3 class="font-bold text-lg">{dict.otherGames.fruitBucketTitle}</h3>
          <p class="text-gray-600 text-sm mb-5">{dict.otherGames.fruitBucketDesc}</p>
          <a href="https://retrosgame.com/fruit-bucket/" class="inline-block px-6 py-2 bg-teal-600 text-white rounded-full font-semibold hover:bg-teal-700 transition">
            Play
          </a>
        </div>
      </div>

      <!-- Card -->
      <div class="rounded-xl shadow-lg overflow-hidden bg-white transform hover:-translate-y-2 hover:shadow-2xl transition duration-300">
        <div class="h-48 overflow-hidden">
          <img 
            src="/SuperMario.jpg" 
            alt="Checkers" 
            class="w-full h-full object-cover hover:scale-110 transition duration-500"
          />
        </div>
        <div class="p-5 text-center">
          <h3 class="font-bold text-lg">{dict.otherGames.superMarioTitle}</h3>
          <p class="text-gray-600 text-sm mb-5">{dict.otherGames.superMarioDesc}</p>
          <a href="https://retrosgame.com/super-mario-bros/" class="inline-block px-6 py-2 bg-teal-600 text-white rounded-full font-semibold hover:bg-teal-700 transition">
            Play
          </a>
        </div>
      </div>
    </div>
  </div>
 &nbsp;
  <h2 class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.otherGames.moreGamesTitle}</h2>

  <p set:html={dict.otherGames.moreGamesIntro}></p>
 &nbsp;
  <h2 class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.otherGames.diceDashTitle}</h2>
  <p set:html={dict.otherGames.diceDashDesc}></p>
 &nbsp;
  <h2 class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.otherGames.castleRaceTitle}</h2>
  <p set:html={dict.otherGames.castleRaceDesc}></p>
 &nbsp;
  <h2 class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.otherGames.treasureLudoTitle}</h2>
  <p set:html={dict.otherGames.treasureLudoDesc}></p>

  <p set:html={dict.otherGames.conclusion}></p>
</section>
