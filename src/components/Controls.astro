---
// src/components/Controls.astro
const { dict } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 text-center" >
   &nbsp;
  <h2 class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">
      {dict.controls.title}
    </h2>
  <p set:html={dict.controls.intro}></p>
  
  <p set:html={dict.controls.mouseTouch}></p>
  
  <p set:html={dict.controls.keyboard}></p>
  
  <p set:html={dict.controls.restart}></p>
  
  <p set:html={dict.controls.conclusion}></p>
</section>
