---
/* src/components/Footer.astro */
const {
  siteName = "Ludo King Online",
  locale = "en",
} = Astro.props;

const year = new Date().getFullYear();
---

<footer class="w-full bg-primary text-secondary mt-16">
  <div class="max-w-6xl mx-auto px-6 py-12 grid gap-10 md:grid-cols-3">
    
    <!-- Brand -->
    <div class="space-y-3">
      <a href={`/${locale}/`} class="flex items-center gap-3">
        <img src="/logo-noir.png" alt={`${siteName} logo`} class="w-20 h-15" />
       
      </a>
      <p class="text-secondary/80 text-sm leading-relaxed">
        Play <strong>Ludo King</strong> online for free!  
        Roll the dice, race your tokens, and enjoy this classic family board game—anytime, anywhere.
      </p>
    </div>

    <!-- Navigation -->
    <nav class="space-y-3">
      <h3 class="font-semibold text-lg">Menu</h3>
      <ul class="space-y-2 text-secondary/90">
        <li><a href={`/${locale}/`} class="hover:text-primary transition">Home</a></li>
        <li><a href={`/${locale}/about/`} class="hover:text-primary transition">About</a></li>
        <li><a href={`/${locale}/privacy-policy/`} class="hover:text-primary transition">Privacy Policy</a></li>
        <li><a href={`/${locale}/terms-of-service/`} class="hover:text-primary transition">Terms of Service</a></li>
      </ul>
    </nav>

    

    <!-- Social -->
    <div class="space-y-3">
      <h3 class="font-semibold text-lg">Follow Us</h3>
      <div class="flex items-center gap-3">
        <a href="#" aria-label="Facebook" class="p-2 rounded-lg bg-white/10 hover:bg-secondary hover:text-primary transition">
          <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor"><path d="M13 22v-8h2.7l.4-3H13V9.2c0-.9.3-1.5 1.6-1.5H16V5.1C15.6 5 14.6 5 13.6 5 11.3 5 10 6.2 10 8.7V11H7.5v3H10v8h3Z"/></svg>
        </a>
        <a href="#" aria-label="YouTube" class="p-2 rounded-lg bg-white/10 hover:bg-secondary hover:text-primary transition">
          <svg viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor"><path d="M23.5 7.1s-.2-1.6-.8-2.3c-.7-.8-1.5-.8-1.9-.9C17.7 3.5 12 3.5 12 3.5s-5.7 0-8.8.4c-.4 0-1.2.1-1.9.9C.7 5.5.5 7.1.5 7.1S0 9 .0 10.9v2.2c0 1.9.5 3.8.5 3.8s.2 1.6.8 2.3c.7.8 1.6.8 2 1 1.5.1 6.5.4 8.7.4s5.7 0 8.8-.4c.4 0 1.2-.1 1.9-1 .6-.7.8-2.3.8-2.3s.5-1.9.5-3.8v-2.2c0-1.9-.5-3.8-.5-3.8ZM9.8 14.8V7.9l6 3.4-6 3.5Z"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom -->
  <div class="border-t border-white/20">
    <div class="max-w-6xl mx-auto px-6 py-5 flex flex-col md:flex-row items-center justify-between gap-3 text-sm text-secondary/80">
      <p>© {year} {siteName}. All rights reserved.</p>
      <button id="to-top" class="text-secondary hover:underline">↑ Back to top</button>
    </div>
  </div>
</footer>

<script is:inline>
  document.getElementById('to-top')?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
