---
// src/components/HowToPlay.astro
const { dict } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 text-center" >
  <h1  class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.howToPlay.title}</h1>

  <p set:html={dict.howToPlay.intro}></p>

  <h2  class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.howToPlay.setupTitle}</h2>
  <ul>
    {dict.howToPlay.setup.map((item: string) => <li set:html={item}></li>)}
  </ul>
 &nbsp;
  <h2  class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2" >{dict.howToPlay.diceTitle}</h2>
  <ul>
    {dict.howToPlay.dice.map((item: string) => <li set:html={item}></li>)}
  </ul>
 &nbsp;
  <h2  class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.howToPlay.moveTitle}</h2>
  <ul>
    {dict.howToPlay.move.map((item: string) => <li set:html={item}></li>)}
  </ul>
 &nbsp;
  <h2  class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.howToPlay.homeTitle}</h2>
  <p set:html={dict.howToPlay.home}></p>
&nbsp;
  <h2  class="text-3xl font-extrabold text-center mb-12 flex items-center justify-center gap-2">{dict.howToPlay.winTitle}</h2>
  <p set:html={dict.howToPlay.win}></p>

  <p set:html={dict.howToPlay.conclusion}></p>
</section>
