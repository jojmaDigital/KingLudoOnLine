<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ludo King Online</title>
  <script>
    // Supported languages
    const supportedLangs = ['en', 'fr', 'es'];

    // Get browser language
    const browserLang = navigator.language || 'en';
    const lang = browserLang.split('-')[0]; // e.g., 'en' from 'en-US'

    // Check if supported, else default to 'en'
    const targetLang = supportedLangs.includes(lang) ? lang : 'en';

    // Immediate redirect to home page in detected language
    window.location.replace(`/${targetLang}/`);
  </script>
  <noscript>
    <meta http-equiv="refresh" content="0;url=/en/">
  </noscript>
</head>
<body style="margin:0;padding:0;overflow:hidden;height:0;"></body>
</html>
