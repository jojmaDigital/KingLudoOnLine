---
import Layout from "../../layouts/Layout.astro";
import { getLangStaticPaths, resolveLang } from "../../lib/i18n";
import HtmlContent from "../../components/HtmlContent.astro";

import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../../locales/${locale}.json`).then((m) => m.default);
---

<Layout lang={locale} title={dict.privacyTitle}>
  <!-- Hero Section -->
  <section class="relative bg-yellow-400 text-white py-20 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/bg-pattern.svg')] opacity-10"></div>
    <div class="relative max-w-5xl mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">
        {dict.privacyTitle}
      </h1>
      <p class="text-lg md:text-xl opacity-90 max-w-3xl mx-auto leading-relaxed">
        {dict.privacySubtitle || "Your privacy is important to us. Learn how we protect and handle your personal data."}
      </p>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class="relative max-w-6xl mx-auto px-6 py-24">
    <!-- Decorative background -->
    <div class="absolute inset-0 bg-gradient-to-r from-purple-100 via-indigo-50 to-purple-100 opacity-60 rounded-[3rem] blur-3xl"></div>

    <!-- Content Wrapper -->
    <div class="relative bg-white/90 backdrop-blur-sm border border-gray-100 rounded-3xl shadow-2xl p-10 md:p-16 hover:shadow-[0_0_40px_rgba(0,0,0,0.1)] transition duration-500">
      <div class="prose prose-lg prose-gray mx-auto leading-relaxed">
        <HtmlContent slug="privacy" locale={locale} fallbackText="Privacy policy not available." />
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class=" text-center text-white">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-3xl md:text-4xl font-extrabold mb-6">
        {dict.privacyCTA || "We respect your privacy"}
      </h2>
      <p class="text-lg opacity-90 mb-8">
        {dict.privacyCTAText || "Our mission is to provide a safe and transparent gaming experience for everyone."}
      </p>
      <a href="/{locale}/play" class="inline-block bg-white text-indigo-700 font-semibold px-8 py-4 rounded-xl shadow-md hover:bg-gray-100 transition">
        {dict.privacyCTAButton || "Play King ludo Now"}
      </a>
    </div>
  </section>
</Layout>
    <footer>
    <Footer siteName="Ludo King Online" locale={locale} />
